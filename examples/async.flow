-- Async/Await Example in FlowLang

ritual loadData ::
    shout("â³ Loading data...")
    wait 1s
    shout("âœ… Data loaded!")
    return "user_data"
end

ritual fetchConfig ::
    shout("â³ Fetching config...")
    wait 500ms
    shout("âœ… Config fetched!")
    return "config_data"
end

cast Spell main() -> Hollow {
    shout("ðŸš€ Starting async operations...")
    
    -- Sequential await
    shout("--- Sequential Execution ---")
    let data = await loadData()
    shout("Got: " + data)
    
    -- Parallel execution
    shout("--- Parallel Execution ---")
    perform loadData(), fetchConfig()
    
    shout("âœ¨ All done!")
}

main()
