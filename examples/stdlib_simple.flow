-- Simple Standard Library Demo
-- Testing File I/O, JSON, and Time modules

circle fs from "std:file"
circle json from "std:json"
circle time from "std:time"

shout("=== FlowLang Standard Library Demo ===")

-- Test 1: Time Module
shout("")
shout("[1] Time Module")
let now = time.now()
whisper("Current time: " + now)

let timestamp = time.timestamp()
whisper("Unix timestamp: " + timestamp)

-- Test 2: File Module
shout("")
shout("[2] File Module")
let test_file = "hello.txt"

whisper("Writing to file...")
fs.write(test_file, "Hello from FlowLang!")

whisper("Checking if file exists...")
let exists = fs.exists(test_file)
whisper("File exists: " + exists)

whisper("Reading file content...")
let content = fs.read(test_file)
whisper("Content: " + content)

-- Test 3: JSON Module
shout("")
shout("[3] JSON Module")

let numbers = [1, 2, 3, 4, 5]
whisper("Array: " + numbers)

let json_str = json.stringify(numbers)
whisper("JSON string: " + json_str)

let parsed = json.parse(json_str)
whisper("Parsed back: " + parsed)

-- Test 4: JSON with simple data
let simple_json = "[10, 20, 30]"
let parsed_nums = json.parse(simple_json)
whisper("Parsed numbers: " + parsed_nums)

shout("")
chant("âœ… All tests completed successfully!")
