{
    "name": "flowlang",
    "displayName": "FlowLang",
    "description": "Language support for FlowLang - A mystical anime-themed scripting language",
    "version": "1.0.0",
    "publisher": "flowlang",
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/flowlang/flowlang"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Programming Languages",
        "Linters",
        "Formatters"
    ],
    "keywords": [
        "flowlang",
        "flow",
        "anime",
        "scripting"
    ],
    "activationEvents": [
        "onLanguage:flowlang"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "flowlang",
                "aliases": [
                    "FlowLang",
                    "flowlang"
                ],
                "extensions": [
                    ".flow"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "flowlang",
                "scopeName": "source.flowlang",
                "path": "./syntaxes/flowlang.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "package": "pnpm run compile && vsce package --no-dependencies",
        "lint": "eslint src --ext ts"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1",
        "vscode-languageserver": "^9.0.1",
        "vscode-languageserver-textdocument": "^1.0.11",
        "vscode-uri": "^3.1.0"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/vscode": "^1.85.0",
        "typescript": "^5.3.0"
    }
}
