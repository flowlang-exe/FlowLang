{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "FlowLang",
    "scopeName": "source.flowlang",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#types"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#sigils"
        },
        {
            "include": "#variables"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-dash.flowlang",
                    "match": "--.*$"
                },
                {
                    "name": "comment.block.flowlang",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.flowlang",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.flowlang",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.flowlang",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.flowlang",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.template.flowlang",
                    "begin": "`",
                    "end": "`",
                    "patterns": [
                        {
                            "name": "constant.character.escape.flowlang",
                            "match": "\\\\."
                        },
                        {
                            "name": "meta.template.expression.flowlang",
                            "begin": "\\$\\{",
                            "end": "\\}",
                            "beginCaptures": {
                                "0": {
                                    "name": "punctuation.definition.template-expression.begin.flowlang"
                                }
                            },
                            "endCaptures": {
                                "0": {
                                    "name": "punctuation.definition.template-expression.end.flowlang"
                                }
                            },
                            "patterns": [
                                {
                                    "include": "$self"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.flowlang",
                    "match": "\\b-?\\d+(\\.\\d+)?\\b"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.flowlang",
                    "match": "\\b(in|Stance|shift|abandon|otherwise|invoke|Aura|when|enter|Phase|from|to|until|forever|return|break|continue)\\b"
                },
                {
                    "name": "keyword.declaration.flowlang",
                    "match": "\\b(let|seal|cast|Spell|ritual|sigil)\\b"
                },
                {
                    "name": "keyword.import.flowlang",
                    "match": "\\b(circle|from|as)\\b"
                },
                {
                    "name": "keyword.async.flowlang",
                    "match": "\\b(await|wait|perform)\\b"
                },
                {
                    "name": "keyword.error.flowlang",
                    "match": "\\b(attempt|rescue|rupture|ward|rebound|finally|Rift|Glitch|Spirit|VoidTear|Shatter)\\b"
                },
                {
                    "name": "constant.language.boolean.flowlang",
                    "match": "\\b(both!|either!|void)\\b"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "support.type.primitive.flowlang",
                    "match": "\\b(Ember|Silk|Pulse|Flux|Hollow)\\b"
                },
                {
                    "name": "support.type.complex.flowlang",
                    "match": "\\b(Constellation|Relic|Spell|Handle)\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.comparison.flowlang",
                    "match": "(is~|not~|>>|<<|>>=|<<=)"
                },
                {
                    "name": "keyword.operator.logical.flowlang",
                    "match": "\\b(both!|either!|negate!)\\b"
                },
                {
                    "name": "keyword.operator.arithmetic.flowlang",
                    "match": "[+\\-*/%]"
                },
                {
                    "name": "keyword.operator.arrow.flowlang",
                    "match": "->"
                },
                {
                    "name": "keyword.operator.assignment.flowlang",
                    "match": "="
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.flowlang",
                    "match": "\\b(whisper|shout|roar|chant)\\b"
                },
                {
                    "match": "\\b(cast\\s+Spell)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
                    "captures": {
                        "1": {
                            "name": "keyword.declaration.flowlang"
                        },
                        "2": {
                            "name": "entity.name.function.flowlang"
                        }
                    }
                },
                {
                    "match": "\\b(ritual)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*::",
                    "captures": {
                        "1": {
                            "name": "keyword.declaration.flowlang"
                        },
                        "2": {
                            "name": "entity.name.function.async.flowlang"
                        }
                    }
                }
            ]
        },
        "sigils": {
            "patterns": [
                {
                    "name": "entity.other.attribute-name.flowlang",
                    "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "match": "\\b(let|seal)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*:",
                    "captures": {
                        "1": {
                            "name": "keyword.declaration.flowlang"
                        },
                        "2": {
                            "name": "variable.other.flowlang"
                        }
                    }
                },
                {
                    "match": "\\b(let|seal)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*=",
                    "captures": {
                        "1": {
                            "name": "keyword.declaration.flowlang"
                        },
                        "2": {
                            "name": "variable.other.flowlang"
                        }
                    }
                }
            ]
        }
    }
}