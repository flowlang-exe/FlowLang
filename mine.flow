-- Stance uses: in Stance / shift Stance / abandon Stance
in Stance (x >> 10) {
    shout("x is big!")
} shift Stance (x >> 5) {
    shout("x is medium")
} abandon Stance {
    shout("x is small")
}

enter Phase i from 1 to 5 {
    shout(i)
}

-- Aura uses: when / otherwise
invoke Aura x {
    when 1 -> shout("one")
    when 2 -> shout("two")
    otherwise -> shout("other")
}

greet("John")

